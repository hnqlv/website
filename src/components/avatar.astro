---
import { Image } from "astro:assets";
import avatarSrc from "@images/avatar.png";
---

<style>
  .avatar {
    margin-bottom: 1.5rem;
    border-radius: 50%;
  }
</style>

<Image
  class="avatar"
  src={avatarSrc}
  width="60"
  height="60"
  alt="Photo of Henrique"
  quality="max"
  densities={[1.5, 2, 3]}
/>
